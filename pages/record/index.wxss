/* pages/record/index.wxss */
.container {
  padding: 20rpx;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.date-display {
  font-size: 32rpx;
  color: #333;
}

.records-count {
  font-size: 28rpx;
  color: #666;
}

.form-item {
  margin-bottom: 30rpx;
  width: 100%;
}

.section-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  display: block;
}

.picker {
  background-color: #fff;
  padding: 20rpx;
  border-radius: 8rpx;
  border: 1px solid #e0e0e0;
  font-size: 28rpx;
  color: #333;
}

.add-record-section {
  margin: 40rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.add-btn {
  width: 400rpx;
  height: 400rpx;
  border-radius: 50%;
  background: #4CAF50;
  color: white;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 8rpx rgba(0,0,0,0.2);
}

.add-btn[disabled] {
  background: #ccc;
  opacity: 0.8;
}

.add-icon {
  font-size: 80rpx;
  margin-bottom: 10rpx;
}

.tip-text {
  font-size: 24rpx;
  color: #999;
  text-align: center;
}

.today-records {
  margin-top: 40rpx;
}

.record-list {
  margin-top: 20rpx;
}

.record-item {
  background: white;
  padding: 20rpx;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
}

.record-time {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.record-info {
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
}

.record-actions {
  display: flex;
  justify-content: flex-end;
}

.action-btn {
  font-size: 24rpx;
  padding: 8rpx 20rpx;
  background: #2196F3;
  color: white;
  border-radius: 4rpx;
  min-width: 120rpx;
} 
/* pages/record/detail.wxss */
.container {
  padding: 20rpx;
}

.form-item {
  margin-bottom: 30rpx;
  width: 100%;
}

.date-display {
  font-size: 32rpx;
  color: #333;
  padding: 20rpx 0;
}

.profession-display {
  background: #fff;
  padding: 20rpx;
  border-radius: 8rpx;
  border: 1px solid #e0e0e0;
}

.section-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
  display: block;
}

.profession-text {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

/* 录音功能样式 */
.recording-section {
  background: #f8f8f8;
  padding: 20rpx;
  border-radius: 12rpx;
  margin: 20rpx 0;
}

.recording-info {
  background: white;
  padding: 20rpx;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
}

.recording-duration {
  text-align: center;
  margin-bottom: 20rpx;
}

.duration-text {
  font-size: 36rpx;
  color: #333;
  font-weight: bold;
}

.recording-controls {
  display: flex;
  justify-content: center;
  gap: 20rpx;
}

.play-btn, .delete-btn {
  min-width: 160rpx;
  padding: 16rpx 32rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.play-btn {
  background: #2196F3;
  color: white;
}

.delete-btn {
  background: #f44336;
  color: white;
}

.recording-actions {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
}

.record-btn {
  width: 300rpx;
  height: 300rpx;
  border-radius: 50%;
  background: #4CAF50;
  color: white;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  box-shadow: 0 4rpx 8rpx rgba(0,0,0,0.2);
  transition: all 0.3s ease;
  margin: 40rpx 0;
}

.record-btn.recording {
  background: #f44336;
  transform: scale(1.1);
}

.record-btn-text {
  font-size: 36rpx;
  margin-bottom: 10rpx;
}

.record-btn-duration {
  font-size: 48rpx;
  font-weight: bold;
}

.recording-tip {
  text-align: center;
  color: #666;
  font-size: 28rpx;
  margin-top: 20rpx;
}

.recording-limit {
  text-align: center;
  color: #999;
  font-size: 22rpx;
  margin-top: 10rpx;
}

.submit-btn {
  background: #4CAF50;
  color: white;
  width: 100%;
  margin-top: 40rpx;
  padding: 20rpx 0;
  border-radius: 8rpx;
  font-size: 32rpx;
}

/* 评价弹窗样式 */
.evaluation-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.evaluation-content {
  background: white;
  width: 80%;
  border-radius: 12rpx;
  padding: 30rpx;
}

.evaluation-header {
  text-align: center;
  margin-bottom: 30rpx;
}

.evaluation-title {
  font-size: 32rpx;
  font-weight: bold;
}

.evaluation-input {
  width: 100%;
  height: 200rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 20rpx;
  box-sizing: border-box;
}

.evaluation-footer {
  display: flex;
  justify-content: space-between;
  margin-top: 30rpx;
  gap: 20rpx;
}

.cancel-btn, .save-btn {
  flex: 1;
  padding: 20rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.cancel-btn {
  background: #f5f5f5;
  color: #666;
}

.save-btn {
  background: #4CAF50;
  color: white;
} 
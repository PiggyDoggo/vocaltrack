<!--pages/record/record.wxml-->
<view class="container">
  <view class="form-item">
    <picker mode="date" value="{{date}}" start="2023-01-01" end="2023-12-31" bindchange="bindDateChange">
      <view class="picker">
        日期：{{date}}
      </view>
    </picker>
  </view>
  <view class="form-item">
    <slider min="0" max="480" step="5" value="{{time}}" show-value bindchange="bindTimeChange"/>
    <text>训练时长：{{time}}分钟</text>
  </view>
  <view class="form-item">
    <textarea placeholder="写下你的训练评价或注释" bindinput="bindCommentInput" value="{{comment}}"></textarea>
  </view>
  <view class="form-item">
    <input placeholder="音乐专业（如声乐、钢琴等）" bindinput="bindMusicProfessionInput" value="{{musicProfession}}"/>
  </view>
  <button class="submit-btn" bindtap="submitRecord">保存记录</button>
  <view class="ad-container" wx:if="{{showAd}}">
    <!-- 这里可以放置广告内容 -->
    <text>广告内容</text>
  </view>
</view>

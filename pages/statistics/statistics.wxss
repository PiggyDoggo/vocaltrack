/* pages/statistics/statistics.wxss */
.container {
  padding: 20rpx;
}

.card-info {
  margin-bottom: 20rpx;
  padding: 20rpx;
  background-color: #f8f8f8;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.card-info text {
  font-size: 28rpx;
  color: #333;
}

.chart-section {
  background-color: white;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
  margin-top: 20rpx;
  padding: 20rpx;
}

.tab-bar {
  display: flex;
  justify-content: space-around;
  margin-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.tab-item {
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  color: #666;
  position: relative;
  transition: all 0.3s;
}

.tab-item.active {
  color: #4CAF50;
  font-weight: bold;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: -2rpx;
  left: 0;
  width: 100%;
  height: 4rpx;
  background-color: #4CAF50;
  border-radius: 2rpx;
}

.chart-scroll-container {
  width: 100%;
  height: 300px;
  margin: 20rpx 0;
  background-color: #fff;
}

.chart-container {
  height: 100%;
  width: fit-content;
  min-width: 100%;
  position: relative;
}

.statistics-chart {
  width: 100vw;
  height: 300px;
  display: block;
  background-color: #fff;
}

.statistics-summary {
  display: flex;
  justify-content: space-around;
  padding: 20rpx 0;
  border-top: 1rpx solid #eee;
}

.summary-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
}

.summary-label {
  font-size: 28rpx;
  color: #666;
}

.summary-value {
  font-size: 36rpx;
  color: #4CAF50;
  font-weight: bold;
}

.chart-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-left: 10rpx;
  border-left: 4rpx solid #4CAF50;
}

.action-buttons {
  display: flex;
  justify-content: space-around;
}
.action-buttons button {
  margin: 0 10rpx;
}

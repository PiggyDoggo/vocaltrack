/* pages/statistics/statistics.wxss */
.container {
  padding: 20rpx;
}

.card-info {
  margin-bottom: 20rpx;
  padding: 20rpx;
  background-color: #f8f8f8;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.card-info text {
  font-size: 28rpx;
  color: #333;
}

.chart-container {
  margin-bottom: 40rpx;
  padding: 20rpx;
  background-color: white;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
}

.chart-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-left: 10rpx;
  border-left: 4rpx solid #4CAF50;
}

.action-buttons {
  display: flex;
  justify-content: space-around;
}
.action-buttons button {
  margin: 0 10rpx;
}

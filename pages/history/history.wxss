/* pages/history/history.wxss */
.container {
  padding: 4rpx;
  padding-bottom: 180rpx;
  box-sizing: border-box;
  width: 100%;
  overflow-x: hidden;  /* 防止横向滚动 */
}

.filter-section {
  margin-bottom: 8rpx;
  background: #fff;
  padding: 6rpx;
  border-radius: 6rpx;
  width: 100%;
  box-sizing: border-box;
}

.filter-group {
  display: flex;
  justify-content: space-around;
  width: 100%;
  box-sizing: border-box;
}

.filter-item {
  font-size: 22rpx;
  color: #333;
  padding: 0 2rpx;
}

.record-list {
  margin-top: 8rpx;
  width: 100%;
  box-sizing: border-box;
}

.record-item {
  background: #fff;
  border-radius: 8rpx;
  padding: 16rpx;
  margin-bottom: 10rpx;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
}

.record-item:active {
  background: #f5f5f5;
}

.record-header {
  margin-bottom: 4rpx;
  width: 100%;
  box-sizing: border-box;
}

.record-control {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  gap: 4rpx;
  width: 100%;
  box-sizing: border-box;
  margin-top: 4rpx;
}

.play-btn, .memo-btn {
  min-width: 48rpx;
  font-size: 18rpx;
  margin: 0;
  padding: 4rpx;
  white-space: nowrap;
  flex: none;
  border-radius: 4rpx;
}

.delete-btn {
  min-width: 100rpx;
}

.delete-btn .iconfont {
  font-size: 40rpx;
  color: #999;
}

.delete-btn .btn-text {
  display: none;
}

.record-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 8rpx 0;
  width: 100%;
  box-sizing: border-box;
  gap: 4rpx;
}

.profession {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  flex-shrink: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  max-width: calc(100% - 80rpx);
}

.duration {
  font-size: 26rpx;
  color: #666;
  flex-shrink: 0;
  margin-left: 12rpx;
  min-width: 60rpx;
  text-align: right;
}

.record-date {
  font-size: 26rpx;
  color: #666;
}

.record-memo {
  background: #f8f8f8;
  padding: 12rpx;
  border-radius: 6rpx;
  margin: 10rpx 0;
  width: 100%;
  box-sizing: border-box;
}

.memo-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
  word-break: break-all;
}

/* 播放控制面板样式 */
.player-panel {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background: white;
  padding: 16rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0,0,0,0.1);
  transform: translateY(100%);
  transition: transform 0.3s ease;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
}

.player-panel.show {
  transform: translateY(0);
}

.record-actions {
  display: flex;
  justify-content: space-around;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #eee;
  margin-bottom: 12rpx;
}

.action-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 8rpx 16rpx;
  min-width: 100rpx;
}

.action-btn .iconfont {
  font-size: 44rpx;
  color: #FF9F43;
  margin-bottom: 6rpx;
}

.action-btn .btn-text {
  font-size: 24rpx;
  color: #666;
}

.player-progress {
  display: flex;
  align-items: center;
  margin: 12rpx 0;
}

.progress-bar {
  flex: 1;
  margin: 0 12rpx;
}

.time-text {
  font-size: 20rpx;
  color: #666;
  min-width: 60rpx;
}

.player-controls {
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 8rpx 0;
}

.control-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 8rpx 20rpx;
}

.control-btn .iconfont {
  font-size: 32rpx;
  color: #FF9F43;
}

.control-btn .btn-text {
  font-size: 18rpx;
  color: #666;
  margin-top: 4rpx;
}

/* 评价弹窗样式 */
.evaluation-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.evaluation-content {
  background: white;
  width: 80%;
  border-radius: 12rpx;
  padding: 30rpx;
}

.evaluation-header {
  text-align: center;
  margin-bottom: 30rpx;
}

.evaluation-title {
  font-size: 32rpx;
  font-weight: bold;
}

.evaluation-input {
  width: 100%;
  height: 200rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 20rpx;
  box-sizing: border-box;
}

.evaluation-footer {
  display: flex;
  justify-content: space-between;
  margin-top: 30rpx;
  gap: 20rpx;
}

.cancel-btn, .save-btn {
  flex: 1;
  padding: 20rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.cancel-btn {
  background: #f5f5f5;
  color: #666;
}

.save-btn {
  background: #FF9F43;
  color: white;
}

/* 录音列表样式 */
.record-recordings {
  margin-top: 16rpx;
  border-top: 1rpx solid #eee;
  padding-top: 16rpx;
}

.record-recordings .recording-item {
  display: flex;
  align-items: center;
  padding: 10rpx 0;
  font-size: 24rpx;
  color: #666;
}

.recording-index {
  margin-right: 20rpx;
  color: #333;
  font-weight: 500;
}

.recording-duration {
  flex: 1;
}

.recording-control {
  display: flex;
  gap: 10rpx;
}

.recording-control .action-btn {
  padding: 6rpx 12rpx;
}

/* 备忘录弹窗样式 */
.memo-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.memo-content {
  background: white;
  width: 85%;
  border-radius: 12rpx;
  padding: 30rpx;
}

.memo-header {
  text-align: center;
  margin-bottom: 20rpx;
}

.memo-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.memo-body {
  margin: 20rpx 0;
}

.memo-input {
  width: 100%;
  height: 240rpx;
  border: 2rpx solid #ddd;
  border-radius: 8rpx;
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  background: #f9f9f9;
}

.memo-footer {
  display: flex;
  justify-content: space-between;
  margin-top: 30rpx;
  gap: 20rpx;
}

.cancel-btn, .save-btn {
  flex: 1;
  padding: 20rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  text-align: center;
}

.cancel-btn {
  background: #f5f5f5;
  color: #666;
}

.save-btn {
  background: #FF9F43;
  color: white;
} 